@{
    ViewData["Title"] = "Fraction Calculator";
}

<h2>Fraction Calculator</h2>

<form asp-controller="Fraction" asp-action="Calculate" method="post">
    <fieldset>
        <legend>First Fraction</legend>
        <input name="Numerator" placeholder="Numerator" required />
        <input name="Denominator" placeholder="Denominator" required />
    </fieldset>
    <fieldset>
        <legend>Second Fraction</legend>
        <input name="f2.Numerator" placeholder="Numerator" required />
        <input name="f2.Denominator" placeholder="Denominator" required />
    </fieldset>

    <label>Choose Operation:</label>
    <select name="operation">
        <option value="Add">+</option>
        <option value="Subtract">−</option>
        <option value="Multiply">×</option>
        <option value="Divide">÷</option>
    </select>

    <button type="submit">Calculate</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
else if (ViewBag.Result != null)
{
    <h3>Result: @ViewBag.Result.ToString()</h3>
    <p>Decimal: @ViewBag.Decimal</p>
}

<p>
    <a asp-controller="Fraction" asp-action="Upload">Завантажити дроби з файлу</a>
</p>
