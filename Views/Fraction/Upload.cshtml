@{
    ViewData["Title"] = "Upload Fractions from File";
}

<h2>Upload Fractions from File</h2>

<form asp-controller="Fraction" asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <input type="file" name="file" accept=".txt" required />
    <button type="submit">Upload</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

<p>
    <a asp-controller="Fraction" asp-action="Index">Повернутись до калькулятора дробів</a>
</p>
